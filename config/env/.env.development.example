# Tu-Link Backend Development Environment Configuration
# Copy this file to .env.development and update with your development values

# Node Configuration
NODE_ENV=development
PORT=3000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=dev-redis-password-change-me
REDIS_TTL=3600

# Firebase Configuration (for push notifications - use dev project)
FIREBASE_PROJECT_ID=tulink-dev
FIREBASE_PRIVATE_KEY=your-dev-firebase-private-key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@tulink-dev.iam.gserviceaccount.com

# Google Maps API (use development key with restrictions)
GOOGLE_MAPS_API_KEY=your-dev-google-maps-api-key

# CORS Configuration (allow localhost for development)
WS_CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8080

# JWT Configuration (use weaker secrets for dev)
JWT_SECRET=dev-jwt-secret-32-characters-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=dev-refresh-secret-32-chars-long
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_VERSION=v1
API_PREFIX=/api
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000  # Higher limit for development

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_DIR=/usr/src/app/logs

# Security Configuration (relaxed for development)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8080
HELMET_CSP=false
TRUST_PROXY=0

# Development specific
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true

# Domain Configuration
API_DOMAIN=api.dev.tulink.xyz
FRONTEND_URL=http://localhost:3000

# Database Configuration (if using a database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=tulink_dev_user
# DB_PASSWORD=dev_password
# DB_DATABASE=tulink_development
# DB_SSL=false