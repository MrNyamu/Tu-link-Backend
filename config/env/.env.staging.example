# Tu-Link Backend Staging Environment Configuration
# Copy this file to .env.staging and update with your staging values

# Node Configuration
NODE_ENV=staging
PORT=3000

# Database Configuration
DB_HOST=your-staging-db-host
DB_PORT=5432
DB_USERNAME=tulink_staging_user
DB_PASSWORD=your-staging-db-password
DB_DATABASE=tulink_staging
DB_SSL=true

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-staging-redis-password
REDIS_TTL=86400

# JWT Configuration
JWT_SECRET=your-staging-jwt-secret-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-staging-refresh-secret-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# API Configuration
API_VERSION=v1
API_PREFIX=/api
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=200  # More permissive for staging testing

# Email Configuration (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-staging-email@gmail.com
SMTP_PASS=your-staging-app-password
EMAIL_FROM=staging-no-reply@tulink.xyz

# Firebase Configuration (staging project)
FIREBASE_PROJECT_ID=your-firebase-staging-project
FIREBASE_PRIVATE_KEY=your-firebase-staging-private-key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-staging-project.iam.gserviceaccount.com

# Logging Configuration
LOG_LEVEL=debug  # More verbose for staging
LOG_FORMAT=json
LOG_DIR=/usr/src/app/logs

# Security Configuration
CORS_ORIGIN=https://staging.tulink.xyz,https://www.staging.tulink.xyz,http://localhost:3000
HELMET_CSP=true
TRUST_PROXY=1

# Monitoring (Optional)
SENTRY_DSN=your-staging-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-staging-new-relic-key

# Domain Configuration
API_DOMAIN=api.staging.tulink.xyz
FRONTEND_URL=https://staging.tulink.xyz