# Application
NODE_ENV=development
PORT=3000
WS_PORT=3001
WS_CORS_ORIGIN=*

# Firebase
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-client-email@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com
FIREBASE_API_KEY=your_firebase_api_key

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Rate Limiting
LOCATION_UPDATE_RATE_LIMIT=60

# Lag Detection
DEFAULT_LAG_THRESHOLD_METERS=500
WARNING_LAG_METERS=500
CRITICAL_LAG_METERS=1000

# Arrival Detection
ARRIVAL_DISTANCE_THRESHOLD_METERS=100
ARRIVAL_SPEED_THRESHOLD_MPS=1.39

# WebSocket Settings
HEARTBEAT_INTERVAL_MS=4000
HEARTBEAT_TIMEOUT_MS=7000

# Connection Recovery
MAX_RETRY_ATTEMPTS=3
RETRY_TIMEOUT_MS=5000
