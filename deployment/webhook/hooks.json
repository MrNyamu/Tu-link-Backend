[
  {
    "id": "deploy-dev",
    "execute-command": "/opt/tulink-backend/deployment/scripts/webhook-deploy.sh",
    "command-working-directory": "/opt/tulink-backend",
    "pass-arguments-to-command": [
      {
        "source": "string",
        "name": "dev"
      },
      {
        "source": "payload",
        "name": "ref"
      },
      {
        "source": "payload",
        "name": "sha"
      }
    ],
    "trigger-rule": {
      "match": {
        "type": "value",
        "value": "{{ getenv \"DEPLOY_WEBHOOK_SECRET\" }}",
        "parameter": {
          "source": "header",
          "name": "X-Deploy-Token"
        }
      }
    },
    "response-message": "Deployment triggered successfully",
    "include-command-output-in-response": true,
    "response-headers": [
      {
        "name": "Content-Type",
        "value": "text/plain"
      }
    ]
  }
]
