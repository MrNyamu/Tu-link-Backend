# Tu-Link Backend Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Node Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=your-db-host
DB_PORT=5432
DB_USERNAME=tulink_prod_user
DB_PASSWORD=your-secure-db-password
DB_DATABASE=tulink_production
DB_SSL=true

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_TTL=86400

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-very-secure-refresh-secret-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# API Configuration
API_VERSION=v1
API_PREFIX=/api
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Email Configuration (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=no-reply@tulink.xyz

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=/usr/src/app/logs

# Security Configuration
CORS_ORIGIN=https://tulink.xyz,https://www.tulink.xyz
HELMET_CSP=true
TRUST_PROXY=1

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Domain Configuration
API_DOMAIN=api.tulink.xyz
FRONTEND_URL=https://tulink.xyz