# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database URLs (Production)
# Add your production database connection strings here
# DATABASE_URL=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Firebase Configuration (Production)
# FIREBASE_PROJECT_ID=tulink-prod
# FIREBASE_CLIENT_EMAIL=
# FIREBASE_PRIVATE_KEY=
# FIREBASE_DATABASE_URL=

# Maps & Location Services
# GOOGLE_MAPS_API_KEY=
# MAPBOX_ACCESS_TOKEN=

# JWT Configuration
# JWT_SECRET=your-production-jwt-secret-key
# JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=https://tulink.xyz,https://api.tulink.xyz

# API Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=50

# Swagger Documentation
SWAGGER_ENABLED=false

# Security
# Add additional production security configurations
# HELMET_ENABLED=true
# RATE_LIMIT_ENABLED=true